<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="style_profile.css">
    <title>Home</title>
</head>
<body>
    <section class="container1">
        <i class="material-icons">person</i>
        <span>Welcome <span>User</span></span>
        <h1>Plant Vitals</h1>
        <!-- <button><i class="material-icons">settings</i></button> -->
       <a href="/unlink/local"><button>Log Out</button></a> 
    </section>
    
    <a href="/devices"> <button id ="device_btn" type="button">Devices</button></a> 
    <h2><i class="material-icons">home</i>Home:<span>Living Room</span></h2>
    <section class="container2">
        <section class="data-container">
            <span>Current Tempurture</span>
            <span id ="temp"> N/A</span> 
            <span>Low</span>
            <span>______________________________</span>
            <span>High</span>
        </section>
        <section class ="data-container">
            <span>Current Humidity</span>
            <span id ="hum">N/A</span>
            <span>Low</span>
            <span>______________________________</span>
            <span>High</span>
        </section>
    </section>
    <section class="container3">
        <span>Daily Average(7 day)<i class="material-icons">arrow_drop_down_circle</i></span>
        <section class="hide">
            <% for(var i=0; i < data.length; i++) {%>
                <% if (user.local.email && data[i].device_id === '12345'){ %>

                
                        <span><%= data[i].daily_avg[0]%></span>
                        <span><%= data[i].daily_avg[1]%></span>
                        <span><%= data[i].daily_avg[2]%></span>
                        <span><%= data[i].daily_avg[3]%></span>
                        <span><%= data[i].daily_avg[4]%></span>
                        <span><%= data[i].daily_avg[5]%></span>
                        <span><%= data[i].daily_avg[6]%></span>
                       
  
                <% } %>
            <% } %>
            <script>
                console.log (<% data %>)
            </script>


        </section>
        <section>
            <canvas id="myChart" width="400" height="100"></canvas>
        </section>
    
        <span>Monthly Average<i class="material-icons">arrow_drop_down_circle</i></span>
        <ul class = "tile">
        <% for(var i=0; i < data.length; i++) {%>
            <li>
                <% for(var j =0; j < data.length; j++) {%>
                    <span><%= data[i].daily_avg[j] %></span>
                    <% } %>
            </li>
    
            <% } %>
        </ul>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="main.js"></script>
</body>
</html>